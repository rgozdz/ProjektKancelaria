            android:name="com.example.rafal.projektkancelaria.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.rafal.projektkancelaria.MainActivity"
            android:label="@string/app_documents"
            android:theme="@style/AppTheme.NoActionBar" >
